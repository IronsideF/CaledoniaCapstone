<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<fx:root prefHeight="600.0" prefWidth="800.0" type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="background" fitHeight="600.0" fitWidth="800.0">
         <image>
            <Image url="@images/BattleBackground800x600.png" />
         </image>
      </ImageView>
      <HBox fx:id="cardBox" layoutX="54.0" layoutY="443.0" prefHeight="131.0" prefWidth="612.0">
         <children>
            <Text fx:id="handCount" fill="#fcfcfc" strokeType="OUTSIDE" strokeWidth="0.0">
               <font>
                  <Font name="Abaddon Bold Regular" size="13.0" />
               </font>
            </Text>
         </children></HBox>
      <HBox fx:id="enemyBox" alignment="BOTTOM_CENTER" layoutX="400.0" layoutY="240.0" prefHeight="193.0" prefWidth="293.0">
         <children>
            <ImageView fx:id="enemySprite">
            </ImageView>
         </children></HBox>
      <ImageView fx:id="playerSprite" fitHeight="150.0" fitWidth="150.0" layoutX="100.0" layoutY="283.0" pickOnBounds="true" preserveRatio="true">
         </ImageView>
      <ProgressBar fx:id="enemyHealth" layoutX="447.0" layoutY="197.0" prefWidth="200.0" progress="1.0" />
      <Button fx:id="confirmButton" layoutX="685.0" layoutY="483.0" mnemonicParsing="false" onAction="#handleConfirmClick" prefHeight="42.0" prefWidth="83.0" text="End Turn" />
      <ProgressBar fx:id="playerHealth" layoutX="45.0" layoutY="254.0" prefWidth="200.0" progress="1.0" />
      <Button fx:id="deckButton" layoutX="54.0" layoutY="14.0" mnemonicParsing="false" text="Deck" />
      <Button fx:id="mapButton" layoutX="109.0" layoutY="14.0" mnemonicParsing="false" text="Map" />
      <Button fx:id="quitButton" layoutX="737.0" layoutY="14.0" mnemonicParsing="false" onAction="#onQuitButtonClick" text="Quit" />
      <Text fx:id="deckCount" fill="#f8f5f5" layoutX="33.0" layoutY="202.0" strokeType="OUTSIDE" strokeWidth="0.0">
         <font>
            <Font name="Abaddon Bold Regular" size="13.0" />
         </font>
      </Text>
      <Text fx:id="discardCount" fill="#fcfafa" layoutX="225.0" layoutY="204.0" strokeType="OUTSIDE" strokeWidth="0.0">
         <font>
            <Font name="Abaddon Bold Regular" size="13.0" />
         </font>
      </Text>
      <Text fx:id="energy" fill="#fffefe" layoutX="123.0" layoutY="211.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="55.21630859375">
         <font>
            <Font name="Abaddon Bold Regular" size="25.0" />
         </font>
      </Text>
   </children>
</fx:root>
