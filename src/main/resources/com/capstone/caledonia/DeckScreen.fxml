<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root type="AnchorPane" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <AnchorPane fx:id="shadow" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" opacity="0.33" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: Black;" />
      <ScrollPane fx:id="cardScroller" layoutX="100.0" layoutY="100.0" maxHeight="400.0" vbarPolicy="NEVER">
        <content>
          <AnchorPane fx:id="gridAnchor" minHeight="0.0" minWidth="0.0">
               <children>
                  <VBox fx:id="cardBox" />
               </children>
            </AnchorPane>
        </content>
      </ScrollPane>
      <Button fx:id="exitButton" layoutX="70.0" layoutY="60.0" mnemonicParsing="false" onAction="#handleExitClick" text="Exit">
         <font>
            <Font name="Abaddon Bold Regular" size="13.0" />
         </font>
      </Button>
   </children>
</fx:root>
